<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <SeekBarPreference
    android:key="@string/code_length_pref_key"
    android:title="@string/code_length_pref_title"
    app:min="@integer/code_length_pref_min"
    android:max="@integer/code_length_pref_max"
    android:defaultValue="@integer/code_length_pref_default"
    app:seekBarIncrement="@integer/code_length_pref_increment"
    app:showSeekBarValue="true"/>

  <EditTextPreference
    android:key="@string/display_name_pref_key"
    android:title="@string/display_name_pref_title"/>

  <SwitchPreference
    android:key="@string/incognito_pref_key"
    android:title="@string/incognito_pref_title"
    android:summaryOff="@string/incognito_pref_summary_off"
    android:summaryOn="@string/incognito_pref_summary_on"/>

</PreferenceScreen>